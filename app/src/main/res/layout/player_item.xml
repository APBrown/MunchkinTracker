<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/playeritem_textview_playername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="Player Name"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">

        <Button
            android:id="@+id/playeritem_button_removelevel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"/>

        <TextView
            android:id="@+id/playeritem_textview_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:text="1"/>

        <Button
            android:id="@+id/playeritem_button_addlevel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"/>

        <View
            android:layout_width="10dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/playeritem_button_removePlayer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/delete_button_background"
            android:text="X"
            android:visibility="invisible"
            tools:visibility="visible"/>
    </LinearLayout>


</LinearLayout>
