<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androiddev.andrewbrown.munchkintracker.HomeActivity"
    tools:showIn="@layout/activity_home">

    <LinearLayout
        android:id="@+id/home_viewgroup_playtoholder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play To: "
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/home_textview_playtolevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="10"
                android:textColor="@android:color/black"
                android:layout_weight="1"/>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:gravity="center">

            <Button
                android:id="@+id/home_button_playto10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="10"/>

            <View
                android:layout_width="5dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/home_button_playto11"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="11"/>

            <View
                android:layout_width="5dp"
                android:layout_height="0dp"/>

            <Button
                android:id="@+id/home_button_playto12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="12"/>

            <View
                android:layout_width="5dp"
                android:layout_height="0dp"/>

            <ToggleButton
                android:id="@+id/home_togglebutton_normalorepic"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:checked="false"
                android:textOn="Epic"
                android:textOff="Normal"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/home_view_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/home_viewgroup_playtoholder"/>

    <ListView
        android:id="@+id/home_listview_playerlist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_view_divider"
        android:layout_above="@+id/home_viewholder_buttons"
        android:stackFromBottom="false"/>

    <LinearLayout
        android:id="@+id/home_viewholder_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/home_button_addplayer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add PLayer"/>

        <Button
            android:id="@+id/home_button_removeplayer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remove PLayer"/>
    </LinearLayout>
</RelativeLayout>
